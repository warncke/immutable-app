<div class="links">
    {{#each links}}
        <a href="{{href}}">{{title}}</a>
    {{/each}}
</div>

<div class="pure-g">

    <div class="pure-u-1 {{#if form}}pure-u-lg-3-4{{/if}}">
        <div class="pad-m col col-left">
            <h2>{{title}}

            {{#if clear}}
                - <a class="reset" href="./">Reset</a>
            {{/if}}
            </h2>

            {{#if records.length}}
                {{>table}}
            {{else}}
                No Records
            {{/if}}
        </div>
    </div>

    {{#if form}}

    <div class="pure-u-1 pure-u-lg-1-4">
        <div class="pad-m col col-right">
            <h2>{{form.title}}</h2>
            {{>form}}
        </div>
    </div>
    {{/if}}

</div>