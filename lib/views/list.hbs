<div class="pure-g">

    <div class="pure-u-1 pure-u-lg-3-4">
        <div class="pad-m col col-left">
            <h2>{{title}}

            {{#if clear}}
                - <a class="reset" href="./">Reset</a>
            {{/if}}
            </h2>

            {{#if result.length}}
                {{>table}}
            {{else}}
                No Records
            {{/if}}
        </div>
    </div>
    <div class="pure-u-1 pure-u-lg-1-4">
        <div class="pad-m col col-right">
            {{>form}}
        </div>
    </div>

</div>