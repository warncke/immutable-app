{{#if field.label}}
    <label for="{{field.id}}" class="{{#if field.error}}error{{/if}}">
        {{field.label}}
        {{#if field.description}}
        <span class="shower">
            <i class="fa fa-question" aria-hidden="true"></i>
            <div class="description hide shower-target">
                {{field.description}}
            </div>
        </span>
        {{/if}}
    </label>
{{/if}}

<input type="password" id="{{field.id}}" name="{{field.name}}" {{#if field.placeholder}}placeholder="{{field.placeholder}}"{{/if}} {{#if field.pattern}}pattern="{{field.pattern}}"{{/if}} class="{{#if field.error}}error{{/if}}" {{#if field.readonly}}readonly{{/if}} {{#if field.required}}required{{/if}} {{#if field.inputSize}}size="{{field.inputSize}}"{{/if}} />

{{#if field.error}}
<div class="error">
    {{field.error}}
</div>
{{/if}}