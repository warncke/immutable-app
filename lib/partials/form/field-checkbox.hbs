{{#if field.label}}
    <label class="pure-checkbox">
        <input type="checkbox" id="{{field.id}}" name="{{field.name}}" class="{{#if field.error}}error{{/if}} {{field.property}} {{field.class}}" {{#if field.value}}checked{{/if}} {{#if field.readonly}}disabled{{/if}} />
        {{field.label}}

        {{#if field.description}}
        <span class="shower">
            <i class="fa fa-question" aria-hidden="true"></i>
            <div class="description hide shower-target">
                {{field.description}}
            </div>
        </span>
        {{/if}}
    </label>
{{else}}
    <input type="checkbox" id="{{field.id}}" name="{{field.name}}" class="{{#if field.error}}error{{/if}} {{field.property}} {{field.class}}" {{#if field.value}}checked{{/if}} {{#if field.readonly}}disabled{{/if}} />
{{/if}}