{{#if field.label}}
    <label for="{{field.id}}" class="{{#if field.error}}error{{/if}}">
        {{field.label}}
        {{#if field.description}}
        <span class="shower">
            <i class="fa fa-question" aria-hidden="true"></i>
            <div class="description hide shower-target">
                {{field.description}}
            </div>
        </span>
        {{/if}}
    </label>
{{/if}}

<input type="color" id="{{field.id}}" name="{{field.name}}" {{#if field.value}}value="{{field.value}}"{{/if}} class="{{#if field.error}}error{{/if}}" {{#if field.readonly}}disabled{{/if}} />

{{#if field.error}}
<div class="error">
    {{field.error}}
</div>
{{/if}}