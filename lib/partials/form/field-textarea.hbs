{{#if field.label}}
    <label for="{{field.id}}" class="{{#if field.error}}error{{/if}}">
        {{field.label}}
        {{#if field.description}}
        <span class="shower">
            <i class="fa fa-question" aria-hidden="true"></i>
            <div class="description hide shower-target">
                {{field.description}}
            </div>
        </span>
        {{/if}}
    </label>
{{/if}}

<textarea id="{{field.id}}" name="{{field.name}}" class="{{#if field.error}}error{{/if}}" {{#if field.readonly}}readonly{{/if}} {{#if field.required}}required{{/if}}>{{field.value}}</textarea>

<script>
    CKEDITOR.replace('{{field.id}}', {
        customConfig: '/assets/ckeditor_config.js',
    })
</script>

{{#if field.error}}
<div class="error">
    {{field.error}}
</div>
{{/if}}